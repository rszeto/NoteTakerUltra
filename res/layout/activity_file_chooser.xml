	 Author: Ryan Szeto
	 Last edit date: 1/16/2013
 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/fileChooserMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/file_chooser_title_bg"
        android:gravity="center"
        android:text="@string/message_select_file"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/file_chooser_title_text"
        android:textSize="@dimen/file_list_text_size" />

    <ListView
        android:id="@+id/notesFilesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fileChooserMessage" >
    </ListView>

</RelativeLayout>
